<div class="comment_wrapper">
	<div class="comment_content">
		<h3><%= comment.name %></h3>
		<p>Commented <%= time_ago_in_words(comment.created_at) %> ago</p>
		<p><%= comment.body %></p>
	</div>
	<p>
		<%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure'} %>
	</p>
</div>